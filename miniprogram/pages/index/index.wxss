/* pages/index/index.wxss */

/* 用户信息相关 */
.user-avatar-wrapper {
  position: relative;
  width: 120rpx;
  height: 120rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #52c41a;
}

.level-badge {
  position: absolute;
  bottom: -4rpx;
  right: -4rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-radius: 20rpx;
  font-weight: bold;
}

/* 功能网格 */
.grid-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.grid-item {
  flex: 1;
  min-width: calc(50% - 10rpx);
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.icon {
  width: 40rpx;
  height: 40rpx;
}

.icon-small {
  width: 32rpx;
  height: 32rpx;
}

.grid-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.grid-desc {
  font-size: 24rpx;
  color: #999;
}

/* 进度条 */
.progress-bar {
  width: 100%;
  height: 16rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
  margin: 20rpx 0;
}

.progress-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #52c41a 0%, #73d13d 100%);
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

/* 统计卡片 */
.stat-card {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #1a1a1a;
  margin: 12rpx 0;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 主题列表 */
.theme-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.theme-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  transition: all 0.2s;
}

.theme-item:active {
  background-color: #f0f0f0;
}

.theme-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
}

.theme-name {
  font-size: 28rpx;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.theme-progress {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.theme-progress-bar {
  flex: 1;
  height: 8rpx;
  background-color: #e0e0e0;
  border-radius: 4rpx;
  overflow: hidden;
}

.theme-progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #1890ff 0%, #36cfc9 100%);
  border-radius: 4rpx;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.modal-content {
  width: 80%;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  animation: slideUp 0.3s ease;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1a1a1a;
  text-align: center;
  margin-bottom: 30rpx;
}

.modal-body {
  padding: 20rpx 0;
  min-height: 200rpx;
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}
